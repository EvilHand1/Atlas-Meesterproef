{% layout "server/layouts/base.liquid" %}

{% block content %}
<h1 class="favorites"> Your favorites</h1>
<ul id="likedPhotosContainer">
  {% if likes.size > 0 %}

  {% for like in likes %}
  <li class="liked-photo" data-photo-id="{{ like.id }}">
    <img src="{{ like.urls.regular }}" alt="{{ like.alt_description }}"
      style="--aspect-ratio: {{ like.width }} / {{ like.height }};">
    <a href="/users/{{ like.user.username }}">
      <p>{{ like.user.name }}</p>
      <p>{{ like.alt_description }}</p>
    </a>
    <button class="likeButton" type="button" data-photo-id="{{ like.id }}" aria-label="Like photo">
      <svg xmlns="http://www.w3.org/2000/svg" class="PpK6d" viewBox="0 0 24 24" version="1.1" aria-hidden="false"
        stroke="none" stroke-width="1">
        <desc lang="en-US">A heart</desc>
        <path data-photo-id="{{ like.id }}"
          d="M21.424 4.594c-2.101-2.125-5.603-2.125-7.804 0l-1.601 1.619-1.601-1.62c-2.101-2.124-5.603-2.124-7.804 0-2.202 2.126-2.102 5.668 0 7.894L12.019 22l9.405-9.513a5.73 5.73 0 0 0 0-7.893Z"
          fill="#47284C" />
      </svg>
    </button>
  </li>
  {% endfor %}
  {% else %}
  <li>you don't have any liked yet!</li>
  {% endif %}
</ul>

{% endblock %}